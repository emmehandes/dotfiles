[colors]
transparent  =  #00000000

red       = #FB7DA7
purple    = #a18bd3
yellow    = #ffce5b
cyan      = #50c6d8
green     = #2cda9d
viridian  = #4C8273
darkblack = #1c1c1c
grey      = #818e8e
white     = #efeeea
black     = #2f343f

[bar/main]
width   =  100%
height  =  2%
radius  =  0.5

background = ${colors.transparent}
foreground = ${colors.yellow}

padding = 1
border-size=0
border-color=

module-margin = 0
font-0 = "Noto Sans:style=Regular:size=12:weight=bold:antialias=true;3"
font-1 = "FontAwesome5Free:style=Solid:size=12:antialias=true;3"
font-2 = "FontAwesome5Free:style=Regular:size=12:antialias=true;3"
font-3 = "FontAwesome5Brands:style=Regular:size=12:antialias=true;3"
font-4 = "DejaVu Sans Mono For Powerline:style=Regular:size=12:antialias=true;3"
dpi-x = 0
dpi-y = 0


modules-left = bspwm xwindow
modules-right = date pulseaudio filesystem memory cpu network bluetooth powermenu

tray-position = right

wm-restack = bspwm

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = ns-resize
locale = en_US.UTF-8
line-size = 0
enable-ipc = true

[module/xwindow]
type = internal/xwindow
label = " %title:0:30:...%"


[module/bspwm]
type = internal/bspwm

label-focused = "  "
label-focused-foreground = ${colors.yellow}

label-occupied = "  "
label-occupied-foreground = ${colors.white}

label-urgent = "  "
label-urgent-foreground = ${colors.red}

label-empty = "  "
label-empty-foreground = ${colors.white}

label-separator =
label-separator-padding = 0
label-separator-foreground = ${colors.black}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = "  %percentage_used%% "
label-mounted-foreground = ${colors.black}
label-unmounted = / unmounted
label-unmounted-foreground = ${colors.black}

[module/cpu]
type = internal/cpu
interval = 2
label = "  %percentage:2%% "
label-foreground = ${colors.black}

[module/memory]
type = internal/memory
interval = 3
label = "   %percentage_used%% "
label-foreground = ${colors.black}

[module/network]
type = internal/network
interface = wlan0
interval = 3

label-connected = "   %upspeed:3%   %downspeed:3%"
label-connected-foreground = ${colors.green}

label-disconnected = "  %ifname% disconnected"
label-disconnected-foreground = ${colors.red}

[module/bluetooth]
type = custom/script
exec = ~/.config/polybar/scripts/bt_status.sh
click-left = kill -USR1 %pid%
tail = true

[module/date]
type = internal/date
interval = 1.0
date = %d/%m/%Y
time = %H:%M
label = " %{A1:firefox-developer-edition "https\://calendar.google.com/calendar/r?pli=1":} %date% - %time%%{A}  "
label-foreground = ${colors.cyan}

[module/pulseaudio]
type = internal/pulseaudio

format-volume = " <ramp-volume> <label-volume> "
format-volume-foreground = ${colors.black}

label-muted =  muted
label-muted-foreground = ${colors.red}

; Only applies if <ramp-volume> is used
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/powermenu]
type = custom/menu

expand-right = true

label-open = "  "
label-open-foreground = ${colors.yellow}
label-close = "  "
label-close-foreground = ${colors.white}
label-separator = " "
label-separator-foreground = ${colors.black}

menu-0-0 = "  "
menu-0-0-exec = systemctl reboot
menu-0-0-foreground = ${colors.yellow}
menu-0-1 = "  "
menu-0-1-exec = systemctl poweroff
menu-0-1-foreground = ${colors.red}

[settings]
screenchange-reload = true
pseudo-transparency = true

[global/wm]
margin-bottom = 0
margin-top = 1
border-size=2

