[colors]
white = #ffffff
black = #aa222328
transparent = #00000000
darkgrey = #2e2f36
lightgrey = #393b44
green = #00ff80
secondary = #e60053
alert = #ff2a33
blue = #59adff
red = #ff0040
orange = #ff8000

[bar/main]
width = 100%
height = 2%
radius = 0.5

background = ${colors.transparent}
foreground = ${colors.white}

padding = 1
border-size=0
border-color=

module-margin = 0
font-0 = "Noto Sans:style=Regular:size=12:weight=bold:antialias=true;3"
font-1 = "FontAwesome5Free:style=Solid:size=12:antialias=true;3"
font-2 = "FontAwesome5Free:style=Regular:size=12:antialias=true;3"
font-3 = "FontAwesome5Brands:style=Regular:size=12:antialias=true;3"
dpi-x = 0
dpi-y = 0


modules-left = bspwm xwindow
modules-right = date pulseaudio filesystem memory cpu network powermenu

tray-position = right

wm-restack = bspwm
separator = %{F#222328} | %{F-}

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = ns-resize
locale = en_US.UTF-8
line-size = 0

[module/xwindow]
type = internal/xwindow
label = " %title:0:30:...%"


[module/bspwm]
type = internal/bspwm

label-focused = " %index% "
label-focused-foreground = ${colors.green}

label-occupied = " %index% "
label-occupied-foreground = ${colors.white}

label-urgent = " %index% "
label-urgent-foreground = ${colors.alert}

label-empty = " %index% "
label-empty-foreground = ${colors.black}

label-separator = |
label-separator-padding = 0
label-separator-foreground = ${colors.black}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = " %percentage_used%% "
label-mounted-foreground = ${colors.white}
label-unmounted = / unmounted
label-unmounted-foreground = ${colors.white}

[module/cpu]
type = internal/cpu
interval = 2
label = "   %percentage:2%% "
label-foreground = ${colors.white}

[module/memory]
type = internal/memory
interval = 3
label = "   %percentage_used%% "
label-foreground = ${colors.white}

[module/network]
type = internal/network
interface = wlan0
interval = 3

label-connected = " %upspeed:3%   %downspeed:3%"
label-connected-foreground = ${colors.green}

label-disconnected = "%ifname% disconnected"
label-disconnected-foreground = ${colors.red}

[module/date]
type = internal/date
interval = 5

date = " %d/%m/%Y"
time = "%H:%M "

label = %date% - %time%
label-foreground = ${colors.white}

[module/pulseaudio]
type = internal/pulseaudio

format-volume = " <ramp-volume> <label-volume> "
format-volume-foreground = ${root.foreground}

label-muted =  muted
label-muted-foreground = ${colors.red}

; Only applies if <ramp-volume> is used
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/powermenu]
type = custom/menu

expand-right = true

label-open = "  "
label-open-foreground = ${colors.white}
label-close = "  "
label-close-foreground = ${colors.white}
label-separator = " "
label-separator-foreground = ${colors.black}

menu-0-0 = "  "
menu-0-0-exec = systemctl reboot
menu-0-0-foreground = ${colors.orange}
menu-0-1 = "  "
menu-0-1-exec = systemctl poweroff
menu-0-1-foreground = ${colors.red}

[settings]
screenchange-reload = true
pseudo-transparency = true

[global/wm]
margin-bottom = 0
margin-top = 1
border-size=2

